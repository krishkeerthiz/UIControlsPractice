<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="MMMMMMMMMMMMM"
        android:ems="6"
        android:textColor="#86AD33"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:maxWidth="20dp"
        android:typeface="serif"
        android:text="sample case"
        android:textAllCaps="true" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text view samples"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#7F3AB5"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="email|web"
        android:text="keerthi.kc@zohocorp.com" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"

        android:background="@color/material_dynamic_neutral0"
        android:numStars="6"
        android:rating="3"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="56dp"
        android:text="Switch1:"
        android:background="#86AD33"
        android:checked="true"
        android:textOff="OFF"
        android:textOn="ON"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_launcher_foreground"
        android:text="Switch2:"
        android:textOff="OFF"
        android:textOn ="ON"/>

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="90"
        android:progress="25"
        android:progressDrawable="@drawable/ic_launcher_background"
        android:thumb="@drawable/ic_launcher_foreground"
         />

    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:max="80"
        android:indeterminate="false"
        android:progress="50" />

    <Button
        android:id="@+id/btnGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"/>

</LinearLayout>
